{
    "manifest_version": 3,
    "name": "RepRooster",
    "description": "Scheduled workout reminders for your daily fitness routine.",
    "version": "0.0.1",
    "action": {
        "default_popup": "src/popup/index.html"
    },
    "background": {
        "service_worker": "src/background.ts"
    },
    "options_ui": {
        "page": "src/options/index.html",
        "open_in_tab": true
    },
    "permissions": [
        "storage",
        "unlimitedStorage",
        "favicon",
        "notifications",
        "alarms",
        "tabs"
    ],
    "icons": {
        "48": "public/icon-48.png"
    }
}